#! /bin/csh


#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-
#                                                                        
#    3dDeconvolve Regression
#
#    Auto-generated by ScriptWriter.py
#    kiefer katovich 2012
#
#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-#-

set script_dir = `pwd`  

#-#-#-#-#-#-#-#-#-#-#-		Subjects					-#-#-#-#-#-#-#-#-#-#-#

set subjects = ( $1 )

#-#-#-#-#-#-#-#-#-#-#-		SID 						-#-#-#-#-#-#-#-#-#-#-#

#-#-#-#-#-#-#-#-#-#-#-		Cycle through subjects:		-#-#-#-#-#-#-#-#-#-#-#

echo starting to process SID

foreach subject ( ${subjects} )

    cd ../data/fmri/${subject}*
    echo processing ${subject} 

#-#-#-#-#-#-#-#-#-#-#-		Run makeVec on model file:		-#-#-#-#-#-#-#-#-#-#-#
	
	python2 $script_dir"/fmri/makeVec.py" $script_dir"/fmri/sid_vecs_group.txt" ${subject}
	
#-#-#-#-#-#-#-#-#-#-#-		Run waver on vectors:		-#-#-#-#-#-#-#-#-#-#-#

	waver -dt 2.0 -GAM -numout 384 -input hgvn_ant_sid.1D > hgvn_ant_sidc.1D
	waver -dt 2.0 -GAM -numout 384 -input hlvn_ant_sid.1D > hlvn_ant_sidc.1D
	waver -dt 2.0 -GAM -numout 384 -input hgvn_out_sid.1D > hgvn_out_sidc.1D
	waver -dt 2.0 -GAM -numout 384 -input hlvn_out_sid.1D > hlvn_out_sidc.1D
    
#-#-#-#-#-#-#-#-#-#-#-		Clean old regression file:		-#-#-#-#-#-#-#-#-#-#-#

	if ( -e sid_reg_group+orig.BRIK ) then
		rm -rf sid_reg_group+orig*
	endif
	
	cp -f $script_dir"/fmri/sid_runs.1D" ./

#-#-#-#-#-#-#-#-#-#-#-		Run 3dDeconvolve:		-#-#-#-#-#-#-#-#-#-#-#

	3dDeconvolve -float -jobs 8 -input sid_mbnf+orig -jobs 6 -concat sid_runs.1D -nfirst 0 -num_stimts 12 -polort 1 \
		-stim_file 1 '3dmotionsid.1D[1]' -stim_label 1 'roll' \
		-stim_file 2 '3dmotionsid.1D[2]' -stim_label 2 'pitch' \
		-stim_file 3 '3dmotionsid.1D[3]' -stim_label 3 'yaw' \
		-stim_file 4 '3dmotionsid.1D[4]' -stim_label 4 'dS' \
		-stim_file 5 '3dmotionsid.1D[5]' -stim_label 5 'dL' \
		-stim_file 6 '3dmotionsid.1D[6]' -stim_label 6 'dP' \
		-stim_file 7 'hgvn_ant_sidc.1D' -stim_label 7 'hgvn_ant' \
		-stim_file 8 'hlvn_ant_sidc.1D' -stim_label 8 'hlvn_ant' \
		-stim_file 9 'hgvn_out_sidc.1D' -stim_label 9 'hgvn_out' \
		-stim_file 10 'hlvn_out_sidc.1D' -stim_label 10 'hlvn_out' \
        -stim_file 11 'bsid_mbnf_csf_mask.1D' -stim_label 11 'csf' \
        -stim_file 12 'bsid_mbnf_wm_mask.1D' -stim_label 12 'wm' \
		-tout -fout -bucket sid_reg_group
	
#-#-#-#-#-#-#-#-#-#-#-		Write zscored dataset:		-#-#-#-#-#-#-#-#-#-#-#

	if ( -e zsid_reg_group+orig.BRIK ) then
		rm -rf zsid_reg_group+orig*
	endif
	
	3dmerge -doall -1zscore -prefix zsid_reg_group sid_reg_group+orig

#-#-#-#-#-#-#-#-#-#-#-		Remove non-zscored dataset:		-#-#-#-#-#-#-#-#-#-#-#

	rm -rf sid_reg_group+orig*
	
	# returns to home directory
	cd $script_dir

end




#-#-#-#-#-#-#-#-#-#-#-		MID 						-#-#-#-#-#-#-#-#-#-#-#

echo starting to process MID

foreach subject ( ${subjects} )

    cd ../data/fmri/${subject}*
    echo processing ${subject} 

#-#-#-#-#-#-#-#-#-#-#-		Run makeVec on model file:		-#-#-#-#-#-#-#-#-#-#-#
	
	python2 $script_dir"/fmri/makeVec.py" $script_dir"/fmri/mid_vecs_group.txt" ${subject}
	
#-#-#-#-#-#-#-#-#-#-#-		Run waver on vectors:		-#-#-#-#-#-#-#-#-#-#-#

	waver -dt 2.0 -GAM -numout 384 -input hgvn_ant_mid.1D > hgvn_ant_midc.1D
	waver -dt 2.0 -GAM -numout 384 -input hlvn_ant_mid.1D > hlvn_ant_midc.1D
	waver -dt 2.0 -GAM -numout 384 -input hgvn_out_mid.1D > hgvn_out_midc.1D
	waver -dt 2.0 -GAM -numout 384 -input hlvn_out_mid.1D > hlvn_out_midc.1D

#-#-#-#-#-#-#-#-#-#-#-		Clean old regression file:		-#-#-#-#-#-#-#-#-#-#-#

	if ( -e mid_reg_group+orig.BRIK ) then
		rm -rf mid_reg_group+orig*
	endif
	
	cp -f $script_dir"/fmri/mid_runs.1D" ./

#-#-#-#-#-#-#-#-#-#-#-		Run 3dDeconvolve:		-#-#-#-#-#-#-#-#-#-#-#

	3dDeconvolve -float -jobs 8 -input mid_mbnf+orig -jobs 6 -concat mid_runs.1D -nfirst 0 -num_stimts 12 -polort 1 \
		-stim_file 1 '3dmotionmid.1D[1]' -stim_label 1 'roll' \
		-stim_file 2 '3dmotionmid.1D[2]' -stim_label 2 'pitch' \
		-stim_file 3 '3dmotionmid.1D[3]' -stim_label 3 'yaw' \
		-stim_file 4 '3dmotionmid.1D[4]' -stim_label 4 'dS' \
		-stim_file 5 '3dmotionmid.1D[5]' -stim_label 5 'dL' \
		-stim_file 6 '3dmotionmid.1D[6]' -stim_label 6 'dP' \
		-stim_file 7 'hgvn_ant_midc.1D' -stim_label 7 'hgvn_ant' \
		-stim_file 8 'hlvn_ant_midc.1D' -stim_label 8 'hlvn_ant' \
		-stim_file 9 'hgvn_out_midc.1D' -stim_label 9 'hgvn_out' \
		-stim_file 10 'hlvn_out_midc.1D' -stim_label 10 'hlvn_out' \
        -stim_file 11 'bmid_mbnf_csf_mask.1D' -stim_label 11 'csf' \
        -stim_file 12 'bmid_mbnf_wm_mask.1D' -stim_label 12 'wm' \
		-tout -fout -bucket mid_reg_group
	
#-#-#-#-#-#-#-#-#-#-#-		Write zscored dataset:		-#-#-#-#-#-#-#-#-#-#-#

	if ( -e zmid_reg_group+orig.BRIK ) then
		rm -rf zmid_reg_group+orig*
	endif
	
	3dmerge -doall -1zscore -prefix zmid_reg_group mid_reg_group+orig

#-#-#-#-#-#-#-#-#-#-#-		Remove non-zscored dataset:		-#-#-#-#-#-#-#-#-#-#-#

	rm -rf mid_reg_group+orig*
	
	# returns to home directory
	cd $script_dir

end
